<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="uitleen_app.Views.ItemsPage"
             Title="{Binding CategoryName}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Padding="20" BackgroundColor="#512BD4">
            <Label Text="Uitleen Systeem Firda" FontSize="24" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label Text="{Binding CategoryName}" FontSize="18" TextColor="White" HorizontalOptions="Center" />
        </StackLayout>
        
        <CollectionView Grid.Row="1" x:Name="ItemsCollection" SelectionMode="Single" SelectionChanged="OnItemSelected">
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="Geen items gevonden in deze categorie" FontSize="18" HorizontalOptions="Center" />
                    <Button Text="Terug naar categorieÃ«n" Clicked="OnBackClicked" Margin="0,20,0,0" 
                            BackgroundColor="#512BD4" TextColor="White" />
                </StackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="15" BorderColor="LightGray" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Image Grid.Column="0" Source="{Binding ImageUrl}" 
                                   WidthRequest="80" HeightRequest="80" 
                                   Aspect="AspectFill" Margin="0,0,15,0"
                                   IsVisible="{Binding HasImage}"/>
                            
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" FontSize="14" />
                                <Label Text="Beschikbaar" FontSize="14" TextColor="Green" 
                                       IsVisible="{Binding Available}" Margin="0,5,0,0" />
                                <Label Text="Niet beschikbaar" FontSize="14" TextColor="Red" 
                                       IsVisible="{Binding NotAvailable}" Margin="0,5,0,0" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <ActivityIndicator Grid.Row="1" x:Name="ActivityIndicator" IsRunning="False" IsVisible="False" 
                           VerticalOptions="Center" HorizontalOptions="Center" />
    </Grid>
</ContentPage>