<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="uitleen_app.Views.LandingPage"
             Title="Uitleen Systeem Firda">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Padding="20" BackgroundColor="#512BD4">
            <Label Text="Uitleen Systeem Firda" FontSize="24" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label Text="Beschikbare Categorieën" FontSize="18" TextColor="White" HorizontalOptions="Center" />
        </StackLayout>
        
        <RefreshView Grid.Row="1" x:Name="CategoriesRefreshView" IsRefreshing="False" Command="{Binding RefreshCommand}">
            <CollectionView x:Name="CategoriesCollection" SelectionMode="Single" SelectionChanged="OnCategorySelected">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="Geen categorieën gevonden" FontSize="18" HorizontalOptions="Center" />
                        <Label Text="Trek omlaag om te vernieuwen" FontSize="14" HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10" Padding="15" BorderColor="LightGray" CornerRadius="5">
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" FontSize="14" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <ActivityIndicator Grid.Row="1" x:Name="ActivityIndicator" IsRunning="False" IsVisible="False" VerticalOptions="Center" HorizontalOptions="Center" />
        
        <Button Grid.Row="1" x:Name="LoginButton" Text="Inloggen" Clicked="OnLoginClicked" 
                BackgroundColor="#512BD4" TextColor="White"
                VerticalOptions="End" HorizontalOptions="End"
                Margin="20" WidthRequest="120" HeightRequest="50" CornerRadius="25" />
    </Grid>
</ContentPage>